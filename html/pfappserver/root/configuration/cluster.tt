<div class="card">
    <div class="card-block">
        <div class="documentation">
          <div id="success-alert"><div id="errorMessage"></div></div>
          <h2 style="padding-bottom:25px;">[% l('Cluster') %]</h2>
          <form name="newClusterInfo" id="newClusterInfo">
              <label style="display:none;" for="id"></label>
              <input style="display:none;" id="id" name="id" value="active_active" type="text"/>
              <label class="form-horizontal control-label" style="float:left; width: 130px;" for="password">Shared Key</label>
              <div class="input-append"><input class="password form-inline help-inline pf-obfuscated-text" type="text" name="password" id="password" placeholder="*********"><button type="button" class="btn"><i class="icon-eye"></i></button></div><br>
              <br/>
              <label class="form-horizontal control-label" style="float:left; width:130px;" for="virtual_router_id">Virtual Router Id</label>
              <input class="virtual_router_id form-inline help-inline" type="text" name="virtual_router_id" id="virtual_router_id" placeholder="50"><br>
          </form>
          <br>
          <label style="float:left; width:130px;">  </label>
          <button class="btn btn-success submit" id="submitNewClusterInfo" style="width: 220px;">Submit</button>

          <br/>
          <h6>Cluster Node List</h6>
          <table id="items" class="table items" data-list-uri="https://10.16.139.168:1443/config/pfmon/list">
            <thead>
              <tr>
                <th><a style="padding-left:1px;" href="#"><i class="icon-trash-o"></i></a></th>
                <th>Host Name</th>
                <th>IP Address</th>
                <th>Type</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>

              <tr>
                <td><input type="checkbox" /></td>
                <td class="item"><a href="https://10.16.139.168:1443/config/pfmon/acct_maintenance/read">a1.example.com</a></td>
                <td>10.0.123.1</td>
                <td>Master</td>
                <td>Active</td>
              </tr>

              <tr>
                <td><input type="checkbox" /></td>
                <td class="item"><a href="https://10.16.139.168:1443/config/pfmon/auth_log_cleanup/read">a2.example.com</a></td>
                <td>10.0.123.1</td>
                <td>Member</td>
                <td>Active</td>
              </tr>

            </tbody>
          </table>
        </div>
    </div>
</div>
<script type="text/javascript" src="[% c.uri_for('/static/js/cluster.js') %]"></script>
