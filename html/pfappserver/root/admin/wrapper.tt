<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>[% l('Administrator') %] - A3</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A3 Administrator">

    <!-- styles -->
[% FOREACH css = cssFiles -%]
    <link rel="stylesheet" href="[% c.uri_for("/static/${css}.css") %]">
[% END -%]
    <link rel="stylesheet" href="[% c.uri_for('/static/css/styles.css') %]">
    <link rel="stylesheet" href="[% c.uri_for('/static/app/application.css') %]">
    <link rel="stylesheet" href="[% c.uri_for('/static/admin/common.css') %]">
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
         <script src="[% c.uri_for('/static/app/html5.js') %]"></script>
    <![endif]-->
    <!-- [% FOREACH css = cssFiles -%]
        <link rel="stylesheet" href="[% c.uri_for("/static/${css}.css") %]">
    [% END -%] -->
        <link rel="stylesheet" href="[% c.uri_for('/static/css/A3styleNew.css') %]">
        <link href="https://fonts.googleapis.com/css?family=Roboto+Mono" rel="stylesheet">

  </head>
  [% SET SHOW_READONLY_ERROR = c.user_allowed_in_admin() && readonly_mode %]
  <body[% IF SHOW_READONLY_ERROR %] class="navbar-error"[% END %]>
    <div class="alert alert-block hide">
      <button class="close" data-dismiss="alert">&times;</button>
      <strong>[% l('Warning!') %]</strong> <span></span>
    </div>

    <div class="alert alert-success hide">
      <button class="close" data-dismiss="alert">&times;</button>
      <strong>[% l('Success!') %]</strong> <span></span>
    </div>

    <div class="alert alert-error hide">
      <button class="close" data-dismiss="alert">&times;</button>
      <strong>[% l('Error!') %]</strong> <span></span>
    </div>
    <div id="navbar" class="navbar navbar-fixed-top navbar-inverse[% IF SHOW_READONLY_ERROR %] navbar-error[% END %]">
      <div class="navbar-inner">
        <div class="row-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>

          <a class="brand visible-phone" href="#">
            <img src="[% c.uri_for('/static/img/aerohive-logo.svg') %]"/>
          </a>
          <a class="brand span3 hidden-phone" href="#">
            <img src="[% c.uri_for('/static/img/aerohive-logo.svg') %]"/>
          </a>
          [%- IF c.user_allowed_in_admin() %]
          <div class="nav-collapse">
            <ul class="nav nav-header">
              [%- IF can_access_any("REPORTS","SERVICES") %]
              <li[% ' class="active"' IF c.action.name == 'status' %]>
                <a href="[% c.uri_for(c.controller('Admin').action_for('status')) %]">[% l('Status') %]</a>
              </li>
              [%- END %]
              [%- IF can_access("REPORTS") %]
              <li[% ' class="active"' IF c.action.name == 'reports' %]>
                <a href="[% c.uri_for(c.controller('Admin').action_for('reports')) %]">[% l('Reports') %]</a>
              </li>
              [%- END %]
              [%- IF can_access("AUDITING_READ") %]
              <li[% ' class="active"' IF c.action.name == 'auditing' %]>
                <a href="[% c.uri_for(c.controller('Admin').action_for('auditing')) %]">[% l('Auditing') %]</a>
              </li>
              [%- END %]
              [%- IF can_access("NODES_READ") %]
              <li[% ' class="active"' IF c.action.name == 'nodes' %]>
                <a href="[% c.uri_for(c.controller('Admin').action_for('nodes')) %]">[% l('Nodes') %]</a>
              </li>
              [%- END %]
              [%- IF can_access_any("USERS_READ", "USERS_READ_SPONSORED") %]
              <li[% ' class="active"' IF c.action.name == 'users' %]>
                <a href="[% c.uri_for(c.controller('Admin').action_for('users')) %]">[% l('Users') %]</a>
              </li>
              [%- END %]
              [%- IF can_access_group_any("CONFIGURATION_GROUP_READ") %]
              <li[% ' class="active"' IF c.action.name == 'configuration' %]>
                <a href="[% c.uri_for(c.controller('Admin').action_for('configuration')) %]">[% l('Configuration') %]</a>
              </li>
              [%- END %]
            </ul>

            <ul class="nav nav-header pull-right">
              <li>
                 <a href="[% c.uri_for(c.controller('Admin').action_for('help')) %]"><img src="[% c.uri_for('/static/img/icon-help.svg') %]"/></a>
              </li>
              <li class="dropdown" data-toggle="tooltip" title="[% l('Perform tasks') %]">
                <a href="" class="dropdown-toggle" data-toggle="dropdown"><img src="[% c.uri_for('/static/img/icon-tools.svg') %]"/></a>
                <ul class="dropdown-menu">
                  <li class="disabled"><a href="#" disabled><b>[% l('Click a task to run/re-run') %]</b></a></li>
                  <li id="checkup_task"><a href="" id="checkup_task_toggle">[% l('Perform checkup') %]</a></li>
                  <li id="fixpermissions_task"><a href="" id="fixpermissions_task_toggle">[% l('Fix permissions') %]</a></li>
                </ul>
              </li>
              <li class="dropdown">
                <a href="" class="dropdown-toggle" data-toggle="dropdown"><img src="[% c.uri_for('/static/img/icon-account.svg') %]"/></a>
                <ul class="dropdown-menu">
                  <li><a href="[% c.uri_for(c.controller('Admin').action_for('licenseKeys')) %]"><i class="icon-off"></i> [% l('Manage Licenses') %]</a></li>
                  <li><a href="[% c.uri_for(c.controller('Admin').action_for('logout')) %]"><i class="icon-off"></i> [% l('Log out') %]</a></li>
                </ul>
              </li>
              <li class="user_info" style="padding-top: 20px; text-transform: lowercase !important; color: #F4F6F9; padding-left: 10px; padding-right:5px;">
                <span>[% c.user | html %]</span>
              </li>
	          </ul>
          </div>

              [% IF is_eula_accepted %]
              [% ELSE %]
              [% IF max_capacity==100 %]
              <!-- <trial indicator -->
              <div class="trialIndicator">
                <div class="trial-clock-indicator pull-right">
                    <img id="clock-icon" src="[% c.uri_for('/static/img/clock.svg') %]"/>
                </div>
                <div id="clockTrialDiv">
                  <p>[% l("Time left of trial: ") %] <span id="daysLeft"></span></p>
                  <div><div id="time-indicator"><div id="time-indicator-bar"></div></div></div>
                </div>
              </div>
              [% ELSE %]
              [% END %]
              [% END %]
              <!--for trialindecator-->

          [%- END %]

        </div>

        [% IF SHOW_READONLY_ERROR %]
        <div class="row-error">
          <strong>[% l('Warning!') %]</strong>
          <span>[% l('The database is in readonly mode. Not all functionality is available.') %] [% doc('_quorum_behavior', 'Clustering_Guide') | none %]</span>
        </div>
        [% END %]
      </div>
    </div>
    <!-- [%- IF c.user_allowed_in_admin() %] -->

    <!-- LICENSE KEY MODAL-->

      <div class="modal fade" id="myModal" style="display: none;">
        <div class="modal-dialog" role="document">
      <!--BEGINNING ALERT TEXT-->
             <div class="modal-content licenseAlert">
              <div class="modal-header" style="background-color: #FFC007; color:#333; font-weight:400; text-align:center;">
                <h3 class="modal-title"><b>Subscription ending <span id="daysLeft"></span></b></h3>
              </div>
              <div class="modal-body">
                <p>Hello [% c.user | html %]. It looks like your subscription is almost ending. Please renew your license by # of days to continue using it. You can do this by calling this number: </p>
                 <p style="font-size: 40px; letter-spacing: 10px; text-align:center; vertical-align:center; padding: 15px 0px 15px 0px;">408-123-4567</p>
                <p>You can also send an email, by pressing the button below <b>"Send Email"</b> where you can prefill a form to send out an email. Thanks again for using our service. </p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-primary toggle-emailForm">Send Email</button>
          <button type="button" class="btn btn-success licenseKey">Enter License Key</button>
                <button type="button" class="btn btn-default dismiss-modal" data-dismiss="modal">Close</button>
              </div>
            </div>
      <!--END OF ALERT TEXT-->

      <!--EMAIL FORM FILL OUT-->
            <div class="modal-content emailForm" style="display: none;">
              <div class="modal-header" style="background-color: #333; color:#F4F6F9; font-weight:400; text-align:center;">
                <h3 class="modal-title"><b>Email Form</b></h3>
              </div>
              <div class="modal-body">
          <form style="text-align:center;">
            <div class="form-group">
              <label class="col-md-4"> First name:</label> <div class="col-md-4"><input type="text" name="fname"></div>
                <label>Last name:</label> <input type="text" name="lname">
            </div>
            <div class="form-group">
              <label>Company:</label> <div class="col-md-4"><input type="text" name="company"></div>
              <label>Company Email:</label> <input type="text" name="email"><br>
              </div>
            <div class="form-group">
              <label>Phone Number:</label> <input type="number" style="width:50px;"> - <input type="number" style="width:52px;"> - <input type="number" style="width:52px;">
            </div>
          </form>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-danger toggle-licenseAlert">Go Back</button>
                <button type="button" class="btn btn-primary emailSentSuccess">Send Email</button>
                <button type="button" class="btn btn-default dismiss-modal" data-dismiss="modal">Close</button>
              </div>
            </div>
      <!--end of email form fill out-->

      <!--SUCCESS MESSAGE SENT EMAIL-->
            <div class="modal-content successEmailMessage" style="display:none;">
              <div class="modal-header" style="background-color: #4cae4c; color:#F4F6F9; font-weight:400; text-align:center;">
                <h3 class="modal-title"><b>Successfully sent</b></h3>
              </div>
              <div class="modal-body">
                The email has been successfully sent. Please wait for an email back to receive a license key.<br>
                Thank you.
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default dismiss-modal" data-dismiss="modal">Close</button>
              </div>
            </div>

      <!--end of success message-->
          </div>
        </div>
    <!--END OF MODAL-->
    <!-- [%- END %] -->
[% content | none %]
    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script id="labels" type="text/json">
    {
      "Cannot Load Content": "[% l('Cannot Load Content') | js %]",
      "Copy": "[% l('Copy') | js %]",
      "Copied": "[% l('Copied') | js %]"
    }
    </script>
    <script type="text/javascript" src="[% c.uri_for('/static/js/vendor/jquery.min.js') %]"></script>
    <script type="text/javascript" src="[% c.uri_for('/static/js/vendor/jquery-ui.min.js') %]"></script>
    <script type="text/javascript" src="[% c.uri_for('/static/js/vendor/jquery-extra.min.js') %]"></script>
    <script type="text/javascript" src="[% c.uri_for('/static/js/vendor/bootstrap.min.js') %]"></script>
    <script type="text/javascript" src="[% c.uri_for('/static/js/pfappserver.js') %]"></script>
[%- IF c.user_allowed_in_admin() %]
    <script type="text/javascript" src="[% c.uri_for('/static/js/adminWrapper.js') %]"></script>
[%- END %]
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.0/jquery.cookie.min.js"></script>
[% FOREACH js = jsFiles -%]
    <script type="text/javascript" src="[% c.uri_for("/static/${js}.js") %]" charset="UTF-8"></script>
[% END -%]
<script type="text/javascript">
  //
    var emailForm = $('.emailForm');
    var emailFormButton = $('.toggle-emailForm');
    var licenseAlertButton = $('.toggle-licenseAlert');
    var licenseAlert = $('.licenseAlert');
    var sentEmailButton = $('.emailSentSuccess');
    var successEmailMessage = $('.successEmailMessage');
    $(document).ready(function() {
      emailForm.hide();
      successEmailMessage.hide();
      emailFormButton.click(function() {
        licenseAlert.slideUp(1000);
        emailForm.slideDown(1000);
      });
      licenseAlertButton.click(function() {
        emailForm.slideUp(1000);
        licenseAlert.slideDown(1000);
      });
      sentEmailButton.click(function(){
      	emailForm.slideUp(1000);
      	successEmailMessage.slideDown(1000);
      });
    });
</script>


  </body>
</html>
